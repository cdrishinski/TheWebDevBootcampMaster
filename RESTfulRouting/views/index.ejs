<%- include("partials/header") %>

<h2>index route showing now</h2>
    
    <% blogs.forEach((blog) =>{ %>
        <div>
            <h2><%= blog.title %></h2>
            <div class="ui segment">
                <img class="ui centered medium image" src="<%= blog.image %>" alt="blog image">
            </div>
            <p> <%= blog.body.substring(0,100) %>...</p>
            <p> <%= blog.created %></p>
            <a href="/blogs/<%= blog._id %>">Read More</a>
        </div>
        
    <% }) %>



<%- include("partials/footer") %>