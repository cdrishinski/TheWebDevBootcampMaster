<%- include("partials/header") %>

<div class="ui main text segment container">
    <div class="ui header huge">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]"value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog body</label>
            <textarea placeholder="Blog message goes here..." name="blog[body]" required><%= blog.body %></textarea>
        </div>

        <button class="ui inverted primary button big" type="submit">Submit</button>
        <a href="/blogs">
            <button class="ui inverted secondary button big" type="submit">Back</button>
        </a>
    </form>
</div>

<%- include("partials/footer") %>