<%- include("partials/header") %>
<div class="ui main text segment container">
    <div class="ui top attached">
        <h1><%= blog.title %></h1>
    </div>
    <div class="ui">
        <img class="ui centered rounded large image" src="<%= blog.image %>" alt="blog image">
        <div class="content">
            <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
            <p><%- blog.body %></p>
        </div>
    </div>
    <a class="ui inverted primary button" href="/blogs">Return home</a>
   <a class="ui inverted yellow button" href="/blogs/<%=blog.id%>/edit">Edit</a>
    <form id="delete" method="POST" action="/blogs/<%= blog.id %>?_method=DELETE">
        <button class="ui inverted red button">Delete</button>
    </form>
</div>

<%- include("partials/footer") %>