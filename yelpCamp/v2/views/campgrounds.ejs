<%- include("partials/header") %>
<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Check out our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>
        </div>
    </header>


    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.map((campground) => { %>
        <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="img-thumbnail">
                <img class="img-thumbnail" src="<%= campground.image %>"
                    alt="Image of campground <%=campground.name %>">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
            </div>
        </div>
        <% }) %>

    </div>


</div>
<%- include("partials/footer") %>